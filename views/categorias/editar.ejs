<!-- views/categorias/editar.ejs -->

<script src="/js/proteger-admin.js"></script>

<div class="container py-4">
  <h2 class="mb-4 text-center">Editar Categoría</h2>

  <!-- Mensajes -->
  <% if (mensaje) { %>
    <div class="alert alert-success"><%= mensaje %></div>
  <% } %>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/categorias/<%= categoria.id %>?_method=PUT" method="POST" class="mb-3">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre de la Categoría</label>
      <input 
        type="text" 
        class="form-control" 
        name="nombre" 
        id="nombre" 
        required
        value="<%= typeof categoria !== 'undefined' && categoria.nombre ? categoria.nombre : '' %>" <!-- Mantener valor si hubo error -->
      >
    </div>

    <button type="submit" class="btn btn-success">Actualizar</button>
    <a href="/categorias" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
