<div class="container py-4">
  <h2 class="mb-4 text-center">Categorías Registradas</h2>
   <div class="mb-3 text-end">
    <a href="/categorias/nuevo" class="btn btn-primary">Agregar Nueva Categoría</a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (categorias && categorias.length > 0) { %>
        <% categorias.forEach(cat => { %>
          <tr>
            <td><%= cat.id %></td>
            <td><%= cat.nombre %></td>
            <td>
              <a href="/categorias/<%= cat.id %>/editar" class="btn btn-warning btn-sm">Editar</a>
              <form action="/categorias/<%= cat.id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar categoría?')">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No hay categorías registradas</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

