<h1 class="text-center mt-4">Bienvenido, <%= usuario.usuario %>!</h1>


<div class="row g-4">
  <!-- Card 1: Productos -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <img src="/imagenes/producto.jpg" class="card-img-top" alt="Productos">
      <div class="card-body">
        <h5 class="card-title">Productos</h5>
        <p class="card-text">Gestiona todos tus productos aquí.</p>
        <a href="/productos" class="btn btn-primary">Ir a productos</a>
      </div>
    </div>
  </div>

  <!-- Card 2: Categorías -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <img src="/imagenes/categorias.jpg" class="card-img-top" alt="Categorías">
      <div class="card-body">
        <h5 class="card-title">Categorías</h5>
        <p class="card-text">Gestiona tus categorías y subcategorías.</p>
        <a href="/categorias" class="btn btn-primary">Ir a categorías</a>
      </div>
    </div>
  </div>

  <!-- Card 3: Imágenes -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <img src="/imagenes/imagenes.jpg" class="card-img-top" alt="Imágenes">
      <div class="card-body">
        <h5 class="card-title">Imágenes</h5>
        <p class="card-text">Sube y gestiona imágenes de tus productos.</p>
        <a href="/imagenes" class="btn btn-primary">Ir a imágenes</a>
      </div>
    </div>
  </div>
</div>
